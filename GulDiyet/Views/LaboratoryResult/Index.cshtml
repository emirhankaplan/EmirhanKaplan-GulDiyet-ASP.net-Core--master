@using GulDiyet.Core.Application.ViewModels.LaboratoryResult
@model List<LaboratoryResultViewModel>

@{
    ViewData["Title"] = "Laboratuvar Sonuçları";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Laboratuvar Sonuçları</h1>
    <div class="border rounded-3 p-4 bg-white shadow-sm">
        <table class="table table-hover">
            <thead class="fw-bold fs-5">
                <tr>
                    <th>Hasta</th>
                    <th>Kimlik No</th>
                    <th>Yapılan Test</th>
                    <th class="text-end">Seçenekler</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (LaboratoryResultViewModel labResult in Model)
                {
                    <tr>
                        <td>@labResult.PatientName</td>
                        <td>@labResult.PatientIdNumber</td>
                        <td>@labResult.LaboratoryTestName</td>
                        <td class="text-end">
                            <a class="btn btn-info btn-sm" asp-controller="LaboratoryResult" asp-action="ReportResult" asp-route-id="@labResult.Id">
                                <i class="bi bi-clipboard2-pulse-fill"></i> Sonuçları Raporla
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
