@using GulDiyet.Core.Application.ViewModels.LaboratoryResult
@model SaveLaboratoryResultViewModel

@{
    bool editMode = Model.Id != 0;
    ViewData["Title"] = "Sonuçları Raporla";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Sonuçları Raporla</h1>
    <div class="card p-4 shadow-sm">
        <form asp-controller="LaboratoryResult" asp-action="@(editMode ? "ReportResult" : "Create")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AppointmentId" />

            <div class="mb-3">
                <label asp-for="Resultado" class="form-label">Sonuçlar (Boş bırakılamaz)</label>
                <textarea required asp-for="Resultado" class="form-control"></textarea>
                <span asp-validation-for="Resultado" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Tamamla</button>
            <a class="btn btn-secondary w-100 mt-2" asp-action="Index">İptal</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
