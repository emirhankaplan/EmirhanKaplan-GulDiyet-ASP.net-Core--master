@model List<GulDiyet.Core.Application.ViewModels.Evaluation.EvaluationViewModel>

@{
    ViewData["Title"] = "Değerlendirme Listesi";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Değerlendirme Listesi</h1>
    <div class="border rounded-3 p-4 bg-white shadow-sm">
        <table class="table table-hover">
            <thead class="fw-bold fs-5">
                <tr>
                    <th>Randevu</th>
                    <th>Puan</th>
                    <th>Geri Bildirim</th>
                    <th class="text-end">Seçenekler</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var evaluation in Model)
                {
                    <tr>
                        <td>@evaluation.AppointmentId</td>
                        <td>@evaluation.Rating</td>
                        <td>@evaluation.Feedback</td>
                        <td class="text-end">
                            <a class="btn btn-secondary btn-sm" asp-controller="Feedback" asp-action="Edit" asp-route-id="@evaluation.Id">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>
                            <a class="btn btn-danger btn-sm" asp-controller="Feedback" asp-action="Delete" asp-route-id="@evaluation.Id">
                                <i class="bi bi-trash-fill"></i> Sil
                            </a>
                            <a class="btn btn-primary btn-sm" asp-controller="Feedback" asp-action="GeneratePdf" asp-route-id="@evaluation.Id">
                                <i class="bi bi-file-earmark-pdf-fill"></i> PDF Oluştur
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
