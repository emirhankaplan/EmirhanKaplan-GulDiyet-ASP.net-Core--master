@model GulDiyet.Core.Application.ViewModels.Diyetisyens.SaveDiyetisyenViewModel

@{
    ViewData["Title"] = "Diyetisyeni Sil";
}
<div class="container mt-5">
    <div class="border rounded-3 p-4 mt-4 text-center bg-white shadow-sm">
        <h3 class="mb-3">@Model.FirstName @Model.LastName diyetisyenunu silmek istediğinizden emin misiniz?</h3>

        <form asp-controller="Diyetisyen" asp-action="DeleteDiyetisyen">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a class="btn btn-secondary" asp-action="Index">İptal</a>
        </form>
    </div>
</div>
