@using GulDiyet.Core.Application.Enums
@using GulDiyet.Core.Application.ViewModels.Users
@model List<UserViewModel>

@{
    ViewData["Title"] = "Kullanıcı Bakımı";
}

<div class="container">
    <h1 class="">Kullanıcı Bakımı</h1>
    <a asp-controller="User" asp-action="Register" class="btn btn-primary-custom m-3">
        <i class="bi bi-plus-circle-fill"></i>
        Kullanıcı Oluştur
    </a>
    <div class="border rounded-3 card-box-shadow bg-white p-4 mt-4">
        <table class="table table-hover">
            <thead class="fw-bold fs-4">
                <tr>
                    <th class="">Adı</th>
                    <th class="">E-posta</th>
                    <th class="">Kullanıcı Adı</th>
                    <th class="">Kullanıcı Türü</th>
                    <th class="text-end">Seçenekler</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (UserViewModel user in Model)
                {
                    <tr class="align-middle">
                        <td class="py-3 fs-6">
                            @user.Name @user.LastName<br>
                        </td>
                        <td class="py-3">
                            @user.Email
                        </td>
                        <td class="py-3">
                            @user.Username
                        </td>
                        <td class="py-3">
                            @user.TypeUserId
                        </td>
                        <td class="text-end align-items-center py-3">
                            <a class="btn btn-secondary btn-sm" asp-controller="User" asp-action="Edit" asp-route-id=@user.Id>
                                <i class="bi bi-pencil-square"></i>
                                Düzenle
                            </a>
                            <a class="btn btn-danger btn-sm" asp-controller="User" asp-action="Delete" asp-route-id=@user.Id>
                                <i class="bi bi-trash-fill"></i>
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
