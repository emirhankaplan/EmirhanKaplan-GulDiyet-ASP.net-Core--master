@using GulDiyet.Core.Application.ViewModels.Email
@model List<EmailViewModel>

@{
    ViewData["Title"] = "E-posta Listesi";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">E-posta Listesi</h1>
    <a asp-controller="Email" asp-action="Create" class="btn btn-primary-custom mb-3">
        <i class="bi bi-plus-circle-fill"></i> Yeni E-posta Oluştur
    </a>
    <div class="border rounded-3 p-4 bg-white shadow-sm">
        <table class="table table-hover">
            <thead class="fw-bold fs-5">
                <tr>
                    <th>Konu</th>
                    <th>Gönderen</th>
                    <th>Gönderim Tarihi</th>
                    <th class="text-end">Seçenekler</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var email in Model)
                {
                    <tr>
                        <td>@email.Subject</td>
                        <td class="text-end">
                            <a class="btn btn-secondary btn-sm" asp-controller="Email" asp-action="Edit" asp-route-id="@email.Id">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>
                            <a class="btn btn-danger btn-sm" asp-controller="Email" asp-action="Delete" asp-route-id="@email.Id">
                                <i class="bi bi-trash-fill"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
